<Window x:Class="PetRentalGui.ReturnAccessory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetRentalGui"
        mc:Ignorable="d"
        Title="ReturnAccessory" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
           

        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Height="35" Width="310" Padding="5" Background="#4E87D4"
           VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White">Enter accessory id:
        </Label>
        <TextBox Grid.Row="1" Width="100" Height="20" Name="ReturnInput" ></TextBox>
        <Button Grid.Row="2" Width="110" Height="20" Click="ReturnRentedAccessory"> Return accessory</Button>
        
        <TextBox Grid.Row="3" Width="100" Height="30" Name="AmountToPay" ></TextBox>
        <Label Grid.Row="3" Width="150" Height="40" HorizontalAlignment="Left" FontSize="18" Foreground="red"> Amount to pay:</Label>
    </Grid>
</Window>
